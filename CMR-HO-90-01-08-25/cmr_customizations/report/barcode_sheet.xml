                                        <t t-set="index" t-value="row * 2 + col"/>
                                        <td t-if="index &lt; total" style="t-attf:#{cell_style}">
                                            <span t-esc="barcode_cells[index]"
                                                  t-options="{
                                                              'widget': 'barcode',
                                                              'humanreadable': 1,
                                                              'symbology': 'auto',
                                                              'img_style': barcode_size
                                                          }"/>
                                        </td>
                                        <td t-if="index &gt;= total" style="t-attf:#{cell_style}"></td>
                                    </t>
                                </tr>
                            </t>
                        </t>
                    </table>
                </t>
            </t>
        </template>


    </data>
</odoo>
