                            <t t-set="barcode_cells" t-value="[]"/>
                            <t t-foreach="o.move_line_ids" t-as="k">
                                <t t-set="qty" t-value="int(k.qty_done) if k.qty_done else 1"/>
                                <t t-foreach="range(qty)" t-as="i">
