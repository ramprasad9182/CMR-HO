<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="vendor_return_view_form" model="ir.ui.view">
        <field name="name">vendor.return.view.form</field>
        <field name="model">vendor.return</field>
        <field name="arch" type="xml">
            <form string="Vendor Return">
                <header>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" confirm="Are you sure to confirm the Document ?" invisible="state not in ['draft']"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ['draft']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" force_save="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" readonly="state == 'done'" force_save="1"/>
                            <field name="return_type" required="1" readonly="state == 'done'" force_save="1"/>
                            <field name="promotions" options="{'no_create': True, 'no_edit':True}" widget="many2many_tags" required="return_type == 'direct_debit_note'" invisible="return_type != 'direct_debit_note'" readonly="state == 'done'" force_save="1"/>
                            <field name="lot_qty" invisible="return_type == 'direct_debit_note'" readonly="state == 'done'" force_save="1"/>
                            <field name="un_brand_barcode" invisible="return_type == 'direct_debit_note'" readonly="state == 'done'" force_save="1"/>
                            <label for="brand_barcode" string="Branded Barcode"/>
                            <div>
                                <field name="brand_barcode" class="oe_inline" invisible="return_type == 'direct_debit_note'" readonly="state == 'done'" force_save="1"/>
                                <button name="get_branded_products" type="object" string="Get Serial's" class="oe_inline btn-primary" invisible="state not in ['draft'] or return_type == 'direct_debit_note'"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="vendor_line_ids">
                                <tree editable="top" create="0" delete="0">
                                    <field name="lot_id" readonly="1" force_save="1" options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                                    <field name="partner_id" readonly="1" force_save="1" options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                                    <field name="grc_id" readonly="1" force_save="1" options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                                    <field name="lot_cp" sum="CP" readonly="1" force_save="1"/>
                                    <field name="lot_mrp" sum="MRP" readonly="1" force_save="1"/>
                                    <field name="lot_rsp" sum="RSP" readonly="1" force_save="1"/>
                                    <field name="quantity" sum="Qty" readonly="parent.state == 'done'" force_save="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="vendor_return_view_list" model="ir.ui.view">
        <field name="name">vendor.return.view.list</field>
        <field name="model">vendor.return</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='draft'" decoration-muted="state=='cancel'" decoration-success="state=='done'">
                <field name="name"/>
                <field name="date"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-muted="state=='cancel'" decoration-success="state=='done'"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="vendor_return_view_search" model="ir.ui.view">
        <field name="name">vendor.return.view.search</field>
        <field name="model">vendor.return</field>
        <field name="arch" type="xml">
            <search string="Search Vendor_return">
                <field name="name"/>
                <field name="state"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
<!--                <filter string="Confirmed" name="confirmed" domain="[('state','=','confirmed')]"/>-->
                <filter string="Done" name="done" domain="[('state','=','done')]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="groupby_state" context="{'group_by': 'state'}"/>
                    <filter string="Creation Date" name="groupby_create_date" context="{'group_by': 'create_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="vendor_return_view_calendar" model="ir.ui.view">
        <field name="name">vendor.return.view.calendar</field>
        <field name="model">vendor.return</field>
        <field name="arch" type="xml">
            <calendar string="Vendor_return" date_start="create_date" color="state">
                <field name="name"/>
                <field name="date"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="vendor_return_view_kanban" model="ir.ui.view">
        <field name="name">vendor.return.view.kanban</field>
        <field name="model">vendor.return</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" sample="1">
                <field name="name"/>
                <field name="state"/>
                <field name="date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <ul>
                                        <li><field name="date"/></li>
                                        <li><field name="state"/></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Actions -->
    <record id="vendor_return_action" model="ir.actions.act_window">
        <field name="name">Vendor Return</field>
        <field name="res_model">vendor.return</field>
        <field name="view_mode">tree,form,kanban,calendar</field>
        <field name="search_view_id" ref="vendor_return_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first vendor return!
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="vendor_return_menu"
              name="Vendor Return"
              action="vendor_return_action"
              parent="stock.menu_stock_transfers"
              sequence="25"/>
</odoo>