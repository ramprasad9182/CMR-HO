<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_multi_product_wizard" model="ir.ui.view">
        <field name="name">multi.product.wizard.form</field>
        <field name="model">multi.product.wizard.direct</field>
        <field name="arch" type="xml">
            <form string="Add Multiple Products">
                <group>
                    <field name="request_id" invisible="1"/>
                    <field name="categ_ids" widget="many2many_tags" invisible="1"/>
                    <field name="product_ids" widget="many2many_tags"
                           domain="[('categ_id','in',categ_ids),('detailed_type','!=','service')]"
                           options="{'no_open': True,'no_create': True,'no_edit':True}"/>
                </group>
                <footer>
                    <button string="Add" type="object" name="action_add_products" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_brand_lot_product_wizard_form" model="ir.ui.view">
        <field name="name">brand.lot.product.wizard.form</field>
        <field name="model">brand.lot.product.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="vendor_id" invisible="1"/>
                    <field name="brand_barcode" readonly="1"/>
                    <field name="brand_qty" readonly="1"/>
                    <field name="brand_serials" widget="many2many_tags"
                           domain="[('company_id.nhcl_company_bool','=',True),('product_qty','>',0),('ref','=',brand_barcode)]"
                           options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                </group>
                <footer>
                    <button string="Add" type="object" name="action_add_serials" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

