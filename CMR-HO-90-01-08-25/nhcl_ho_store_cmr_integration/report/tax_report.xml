<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_pos_tax_pdf">
        <t t-call="web.html_container">
            <div class="header">
                <h2>POS Tax Report</h2>
            </div>

            <!-- Table for Tax Data -->
            <table class="table table-bordered" style="width: 100%; border-collapse: collapse;">
                <thead>
                    <tr style="background-color: #f2f2f2; text-align: left; font-weight: bold;">
                        <th style="padding: 8px; border: 1px solid #ddd;">Store</th>
                        <th style="padding: 8px; border: 1px solid #ddd;">Tax %</th>
                        <th style="padding: 8px; border: 1px solid #ddd;">Taxable Amount</th>
                        <th style="padding: 8px; border: 1px solid #ddd;">CGST Amount</th>
                        <th style="padding: 8px; border: 1px solid #ddd;">SGST Amount</th>
                        <th style="padding: 8px; border: 1px solid #ddd;">IGST Amount</th>
                        <th style="padding: 8px; border: 1px solid #ddd;">Total Tax Amount</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Loop through the report data and display each row -->
                    <t t-foreach="doc" t-as="store_data">
                        <t t-foreach="store_data['report_data']" t-as="line">
                            <tr>
                                <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">
                                    <span t-esc="store_data['store_name']"/>
                                </td>
                                <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">
                                    <span t-esc="line['tax_percent']"/>
                                </td>
                                <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">
                                    <span t-esc="round(line['taxable_amt'], 2)"/>
                                </td>
                                <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">
                                    <span t-esc="round(line.get('cgst_amt', 0), 2)"/>
                                </td>
                                <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">
                                    <span t-esc="round(line.get('sgst_amt', 0), 2)"/>
                                </td>
                                <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">
                                    <span t-esc="round(line.get('igst_amt', 0), 2)"/>
                                </td>
                                <td style="padding: 8px; border: 1px solid #ddd; text-align: right;">
                                    <span t-esc="round(line.get('tax_amt', 0), 2)"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
        </t>
    </template>
</odoo>
