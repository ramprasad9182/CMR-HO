<?xml version="1.0" encoding="UTF-8" ?>
<odoo>


    <record id="nhcl_pos_delivery_hour_report" model="ir.actions.act_window">
        <field name="name">Pos Delivery Hour Report</field>
        <field name="res_model">nhcl.pos.delivery.hour.report</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="nhcl_pos_delivery_hour_report_form" model="ir.ui.view">
        <field name="name">Pos Delivery Hour Report Form</field>
        <field name="model">nhcl.pos.delivery.hour.report</field>
        <field name="arch" type="xml">
            <form string="Pos Delivery Based on Quantity" create="0">
                <h1 style="color:black;font-weight:1000;text-align:center;">Pos Delivery Based on Quantity
                </h1>
                <sheet>
                    <header>
                        <button name="get_pos_delivery_order_hour_report" type="object"
                                string="Submit" class="btn-primary"/>
                        <button name="action_to_reset" type="object"
                                string="Reset" class="btn-secondary"/>
                        <button name="get_excel_sheet" type="object"
                                string="Excel" class="btn-success"/>
                    </header>
                    <group name="pos_delivery_hour_report" style="border: 2px solid #990099; padding: 10px;">
                        <group name="pos_delivery_hour_report_group">
                                <field name="nhcl_store_id"
                                       placeholder="Select Company"
                                       domain="[('nhcl_active', '=', True),('nhcl_store_type', '!=', 'ho')]"
                                       widget="many2many_checkboxes"
                                       />
<!--                            <field name="from_date" required="1" widget="daterange"-->
<!--                                       options="{'to_date_field': 'to_date'}"/>-->
<!--                                <field name="to_date" required="1"/>-->
                            <!--                            <field name="nhcl_store_id" widget="many2many_kanban">   <kanban quick_create="false" create="true" delete="true">      <field name="nhcl_store_id"/>      <templates>          <t t-name="kanban-box">              <div class="oe_kanban_global_click" style="position: relative">                  <a t-if="! read_only_mode" type="delete" style="position: absolute; right: 0; padding: 4px; diplay: inline-block">X</a>                  <div class="oe_module_vignette">                      <img t-att-src="kanban_image('nhcl.ho.store.master', 'image_small', record.id.value)" class="oe_avatar oe_kanban_avatar_smallbox"/>                      <div class="oe_module_desc">                          <field name="name"/>                      </div>                  </div>              </div>          </t>      </templates>  </kanban></field>-->
                        </group>
                        <group name="pos_delivery_hour_report_date_details">
                            <group>
                                <field name="from_date" required="1" widget="daterange"
                                       options="{'to_date_field': 'to_date'}"/>
                                <field name="to_date" required="1"/>
                            </group>

                        </group>
                    </group>
                    <notebook>
                        <page string="POS Delivered Orders Report">
                            <field name="nhcl_pos_delivery_order_hour_report_ids" readonly="1" forsesave="1">
                                <tree create="0" delete="0" editable="bottom">
                                    <field name="nhcl_store_id"/>
                                    <field name="nhcl_name"/>
                                    <field name="nhcl_product_id"/>
                                    <field name="nhcl_date_order"/>
                                    <field name="nhcl_order_quantity"/>
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
                <!--                                <div class="oe_chatter">-->
                <!--                                    <field name="message_follower_ids"/>-->
                <!--                                    <field name="activity_ids"/>-->
                <!--                                    <field name="message_ids"/>-->
                <!--                                </div>-->
            </form>
        </field>
    </record>

    <menuitem id="reporting_status_pos_delivery_hour"
              name="Pos Delivery Based on Quantity"
              parent="reporting_store_heading"
              action="nhcl_ho_store_cmr_integration.nhcl_pos_delivery_hour_report"
              sequence="4"/>

</odoo>

