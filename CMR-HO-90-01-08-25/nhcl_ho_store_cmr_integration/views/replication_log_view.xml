    <record id="action_cmr_replication_log" model="ir.actions.act_window">
        <field name="name">New Store Replication Log</field>
        <field name="res_model">nhcl.replication.log</field>
        <field name="view_mode">tree,graph</field>
        <field name="context">{'search_default_group_by_destination':1,'search_default_group_by_model':1}</field>
        <field name="search_view_id" ref="view_search_replication_log"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new Log
            </p>
        </field>
    </record>

