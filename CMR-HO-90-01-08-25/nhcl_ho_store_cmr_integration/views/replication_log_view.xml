    <record id="replications_source_graph_view" model="ir.ui.view">
        <field name="name">Source Performance Analysis</field>
        <field name="model">nhcl.replication.log</field>
        <field name="arch" type="xml">
            <graph string="Source Performance Analysis" type="bar">
                <field name="nhcl_date_of_log" interval="month"/>
                <field name="nhcl_destination_name"/>
            </graph>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_search_replication_log" model="ir.ui.view">
        <field name="name">nhcl.replication.log.search</field>
        <field name="model">nhcl.replication.log</field>
        <field name="arch" type="xml">
            <search string="Search Replication Logs">
                <field name="nhcl_destination_name" string="Destination Name"/>
                <field name="nhcl_model_name" string="Replication Log" />
                <!-- Group By Options -->
                <group string="Group By">
                    <filter string="Destination Name" name="group_by_destination"
                            context="{'group_by': 'nhcl_destination_name'}"/>
                    <filter string="Model Name" name="group_by_model"
                            context="{'group_by': 'nhcl_model_name'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'nhcl_status'}"/>
                </group>
            </search>
        </field>
    </record>

