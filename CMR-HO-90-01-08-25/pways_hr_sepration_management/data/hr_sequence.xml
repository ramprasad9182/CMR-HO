<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="seq_hr_sepration" model="ir.sequence">
            <field name="name">HR Employee sepration</field>
            <field name="code">hr.employee.sepration</field>
            <field name="prefix">ERN/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        <record id="seq_hr_gratuity" model="ir.sequence">
            <field name="name">HR Employee Gratuity</field>
            <field name="code">hr.employee.gratuity</field>
            <field name="prefix">EGN/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>
        <record id="sequence_hr_settlement" model="ir.sequence">
            <field name="name">HR Employee Settlements</field>
            <field name="code">hr.employee.settlement</field>    
            <field name="padding">5</field>
            <field name="prefix">ESN/</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
