<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_inherits_account" model="ir.ui.view">
            <field name="name">hr.res_config_settings_view_form.inherit.account</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//setting[@id='enrich_employee_setting']" position="after">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sepration_credit_account_id"/>
                            <div class="text-muted">
                                <field name="sepration_credit_account_id"/>
                            </div>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="sepration_debit_account_id"/>
                            <div class="text-muted">
                                <field name="sepration_debit_account_id"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="view_account_journal_form_sattlement_inherit" model="ir.ui.view">
            <field name="name">account.journal.form.inherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="is_salary_wages"/>
                </field>
            </field>
        </record>
        
        <record id="hr_contract_view_salary" model="ir.ui.view">
            <field name="name">hr.contract.form.salary</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//group[@name='salary_info']" position="after">
                        <group>
                            <group name="gross amount">
                                <label for="gross_amount"/>
                                <div class="o_row" name="gross_amount">
                                    <field name="gross_amount" nolabel="1"/>
                                    <span>/ month</span>
                                </div>
                            </group>
                            <group name="net amount">
                                <label for="net_amount"/>
                                <div class="o_row" name="net_amount">
                                    <field name="net_amount" nolabel="1"/>
                                    <span>/ month</span>
                                </div>
                            </group>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</odoo>
