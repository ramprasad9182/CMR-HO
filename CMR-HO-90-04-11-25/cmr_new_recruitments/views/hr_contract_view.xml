<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_contract_gss" model="ir.ui.view">
        <field name="name">Contract</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
             <xpath expr="//group[@name='salary_info']" position="inside">
                    <group string="Employer Contribution" invisible="country_code != 'IN'">
                        <field name="employer_pf"/>
                        <field name="employer_esic"/>
                    </group>
                </xpath>
<!--            <xpath expr="//field[@name='job_id']" position="after">-->
<!--                <field name="leaves_available"/>-->
<!--                <field name="cmr_el"/>-->
<!--            </xpath>-->
            <xpath expr="//field[@name='provident_fund']" position="after">
                <field name="family_insurance_m"/>
                <field name="uniform"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page[@name='information']/group/group[@name='salary']"
                   position="inside">
                <field name="net_salary"/>
                <field name="cost_to_company"/>
                <field name="actual_bonus"/>
            </xpath>
<!--            <xpath expr="//form/sheet/notebook/page[@name='other']" position="after">-->
<!--                <page string="Leave History">-->
<!--                    <field name="leave_line_ids">-->
