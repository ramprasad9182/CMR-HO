<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="email_template_advertisement_expiry" model="mail.template">
            <field name="name">Advertisement Expiry Notification</field>
            <field name="email_from">${(user.email or '').strip()}</field>
            <field name="subject">Your advertisement is going to expire in 2 days</field>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <div style="background-color: #714B67; padding:0.6rem;padding-left: 35px;text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;width:100%">
                        <h2>
                            Hi, <t t-esc="object.partner_id.name"/>
                        </h2>
                        <div>
                            <h4>Your advertisement is going to expire in 2 days.</h4><br/>
                            <h4>End Date: <t t-esc="format_date(object.end_date, 'd - MMM - y') or ''"/></h4><br/>
                            <h4>Please take the necessary actions to renew it.</h4><br/>
                        </div>
                    </div>
                    <br/>
                    Regards,
                    <br/>
                    <t t-esc="object.company_id.name"/>
                    <br/>
                </div>
            </field>
        </record>
    </data>
</odoo>