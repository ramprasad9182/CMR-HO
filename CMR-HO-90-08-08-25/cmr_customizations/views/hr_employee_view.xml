<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cmr_hr_employee_form_view" model="ir.ui.view">
        <field name="name">hr.employee.form.inherits</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mobile_phone']" position="before">
                <field name="sale_employee" placeholder="Please Select Sale Employee...." required="1"/>
                <field name="nhcl_id"/>
            </xpath>
             <xpath expr="//form/sheet/group/group/field[@name='department_id']" position="before">
                <field name="employee_sequence" readonly="1" required="1" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>