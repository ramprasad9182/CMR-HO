<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="open_parcel_tree" model="ir.ui.view">
        <field name="name">open.parcel.tree</field>
        <field name="model">open.parcel</field>
        <field name="arch" type="xml">
            <tree string="Open Parcel" create="0" multi_edit="1">

                <field name="parcel_lr_no"/>
                <!--                <field name="parcel_rc_number" invisible="1"/>-->
                <field name="parcel_transporter"/>
                <field name="barcode"/>
                <field name="verified" readonly="1"/>

                <button name="open_parcel" type="object" string="Open"
                        class="btn-primary"
                        invisible="verified == True"
                />


                <button name="open_parcel_done" type="object" string="Parcel Opened"
                        class="btn-warning"
                        invisible="verified == False"
                />
                <field name="parcel_bale" string="Total Bales Quantity"/>
                <field name="state" optional="show"

                       decoration-success="state == 'done'"
                       decoration-info="state == 'draft'"
                       widget="badge"
                />


            </tree>
        </field>
    </record>

    <record id="open_parcel_kanban" model="ir.ui.view">
        <field name="name">open.parcel.kanban</field>
        <field name="model">open.parcel</field>
        <field name="arch" type="xml">
            <kanban create="0">
                <field name="parcel_lr_no"/>
                <field name="parcel_rc_number"/>
                <field name="parcel_transporter"/>
                <field name="barcode"/>
                <field name="verified"/>
                <field name="parcel_bale"/>
                <field name="state" optional="show"/>
                <templates>
                    <t t-name="kanban-box">
                        <t t-if="record.verified.raw_value">
                            <div class="o_kanban_image o_kanban_image_with_background">
                                <img class="o_kanban_image_inner"
                                     t-att-src="'cmr_customizations/static/description/open_parcel.png'"/>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="o_kanban_image o_kanban_image_with_background">
                                <img class="o_kanban_image_inner"
                                     t-att-src="'cmr_customizations/static/description/close_parcel.png'"/>
                            </div>

                        </t>
                        <div class="oe_kanban_details">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="parcel_lr_no" placeholder="parcel_lr_no"/>

                                    </strong>
                                    <span class="o_kanban_record_subtitle">
                                        <field name="parcel_transporter"/>
                                    </span>
                                </div>
                            </div>
                            <button t-if="record.state.raw_value == 'draft'" class="btn btn-primary" name="open_parcel"
                                    type="object">Open
                            </button>
                            <div class="oe_kanban_content position-absolute start-0 bottom-0 end-0 me-2">
                                <div class="o_kanban_record_bottom mt-3">
                                    <div class="oe_kanban_bottom_left"/>
                                    <div class="oe_kanban_bottom_right">
                                        <div class="hr_avatar mb-1 ms-2 me-n1">
                                            <strong>
                                                <field name="barcode" readonly="1"/>
                                            </strong>
                                            <b>/</b>
                                            <strong>
                                                <field name="parcel_bale" readonly="1"/>
                                            </strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--    #### Open Parcel  Search View #####-->
    <record id="open_parcel_search_view" model="ir.ui.view">
        <field name="model">open.parcel</field>
        <field name="name">open.parcel.search</field>
        <field name="arch" type="xml">
            <search string="Open Parcel">
                <field name="parcel_lr_no"/>
                <field name="barcode"/>
                <field name="parcel_transporter"/>
                <field name="state"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"
                        context="{'default_state': 'draft'}"/>
            </search>
        </field>
    </record>

    <record id="open_parcel_form" model="ir.ui.view">
        <field name="name">open.parcel.form</field>
        <field name="model">open.parcel</field>
        <field name="arch" type="xml">
            <form string="Open Parcel" create="0">
                <header>

                    <field name="state" widget="statusbar" statusbar_visible="draft,delivery"/>
                </header>
                <sheet>
                    <group>
                        <field name="parcel_lr_no"/>
                        <field name="parcel_rc_number"/>
                        <field name="parcel_po_no" options="{'no_edit': True, 'no_create': True, 'no_open': True}"
                               readonly="1" force_save="1"/>
                        <field name="parcel_transporter"
                               options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                        <field name="parcel_bale" readonly="1"/>
                    </group>
                    <notebook>
                        <page name="parcel" string="Parcel Information">
                            <group>
                                <field name="barcode"/>
                                <field name="verified" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_to_open_parcel" model="ir.actions.act_window">
        <field name="name">Open Parcel</field>
        <field name="res_model">open.parcel</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="open_parcel_search_view"/>
        <field name="context">{"search_default_state":'draft'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Open Parcel
            </p>
        </field>
    </record>

    <menuitem id="open_parcel_root"
              name="Open Parcel"
              parent="logistic_operation_menu"
              action="cmr_customizations.action_to_open_parcel"
              sequence="5"/>
    <menuitem id="manual_open_parcel_root"
              name="Open Parcel"
              parent="manual_logistic_operation_menu"
              action="cmr_customizations.action_to_open_parcel"
              sequence="5"/>
</odoo>



