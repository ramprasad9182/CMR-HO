<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="import_buttons_res_users_form" model="ir.ui.view">
            <field name="name">res.users.form.import.orders</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='preferences']" position="after">
                    <page string="Import Access" name="import_orders">
                        <group name="import_orders_rights">
                            <group>
                                <field name="import_approval_line"/>
                                <field name="import_purchase_order_line"/>
                                <field name="import_sale_order_line"/>
                                <field name="import_account_move_line"/>
                            </group>
                            <group>
                                <field name="import_stock_move_line"/>
                                <field name="import_bom_line"/>
                                <field name="import_mrp_prod_line"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
