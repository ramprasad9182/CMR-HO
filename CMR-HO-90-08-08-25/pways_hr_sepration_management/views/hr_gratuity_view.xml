        <record id="employee_gratuity_tree" model="ir.ui.view">
            <field name="name">hr.employee.gratuity.tree</field>
            <field name="model">hr.employee.gratuity</field>
            <field name="arch" type="xml">
                <tree string="Employee Gratuity">
                    <field name="name"/>
                    <field name="sepration_id"/>
                    <field name="gratuity_amount"   sum="Total amount"  widget="monetary" />
                    <field name="currency_id" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        
        <record id="employee_gratuity_form" model="ir.ui.view">
            <field name="name">hr.employee.gratuity.form</field>
            <field name="model">hr.employee.gratuity</field>
            <field name="arch" type="xml">
                <form string="Employee Gratuity">
                    <header>
                         <button name="validate_function" type="object" string="Validate" class="oe_highlight" invisible="state in ('approve','cancel', 'validate')"/>
                         
                         <button name="approve_function" type="object" string="Confirm" class="oe_highlight" invisible="state in ('draft','cancel','approve')"/>
                         
                         <button name="cancel_function" type="object" string="Cancel" invisible="state in ('cancel','approve')"/>
                         
                         <button name="draft_function" type="object" string="Set to Draft" invisible="state != 'cancel'"/>
                         
                         <button name="action_create_emp_settement" type="object" invisible="state != 'approve'" string="Create Employee Settlements" class="oe_highlight"/>
                         
                         <field name="state" widget="statusbar" statusbar_visible="draft,validate,approve"/>
                    </header>
                        <sheet>
                            <div class="oe_button_box" name="button_box">
                                <button class="oe_stat_button" name="action_open_settelement" type="object" icon="fa-edit">
                                    <field name="count_settlement" widget="statinfo" string="Settlements"/>
                                </button>
                            </div>
                            <div class="oe_title">
                                <h1>
                                    <field name="name" readonly="1"/>
                                </h1>
                            </div>
                                <table>
                                        <tr>
                                            <h2>
                                                <td>
                                                    <group>
                                                        <field name ="sepration_id"  string="Employee" required="True" readonly="state == 'approve'"/>
                                                    </group>
                                                </td>
                                            </h2>
                                        </tr>
                                </table>
                                <group>
                                    <group>
                                        <field name="joined_date" required="True" readonly="state == 'approve'"/>
                                        <field name="worked_years"  required="True" readonly="True" widget="float"/>
                                        <field name="eligible_days" readonly="True"/>
                                        <field name="last_month_salary" invisible="state in ('cancel','draft')" readonly="state == 'approve'"/>
                                    </group>
                                    <group>
                                        <field name='revealing_date'/>
                                        <field name="total_days"  invisible="state in ('cancel','draft')" readonly="True"/>
                                        <field name="unproductive_days"/>
                                        <field name="gratuity_amount" invisible="state in ('cancel','draft','validate')" readonly="True"/>
                                    </group>
                                </group>
                                <notebook>
                                    <page string='Notes'>
                                        <field name="reason"/>
                                    </page>
                                    <page string='Attachments'>
                                        <field name="attachment_ids" widget='many2many_binary'/>
                                    </page>
                                </notebook>
                        </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="activity_ids" widget="mail_activity" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

       

        <record id="action_employee_gratuity" model="ir.actions.act_window">
           <field name="name">Employee Gratuity</field>
           <field name="res_model">hr.employee.gratuity</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="gratuity_creation" 
            name="Employee Gratuity" 
            parent="pways_hr_sepration_management.employee_sepration"
            action="action_employee_gratuity"  
            sequence="10"/>
    </data>
</odoo>
