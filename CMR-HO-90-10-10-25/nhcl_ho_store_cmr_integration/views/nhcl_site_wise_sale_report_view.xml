<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="nhcl_pos_sale_report" model="ir.actions.act_window">
        <field name="name">Pos Sale Report</field>
        <field name="res_model">nhcl.pos.sale.report</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="nhcl_pos_sale_report_form" model="ir.ui.view">
        <field name="name">Pos Sale Report Form</field>
        <field name="model">nhcl.pos.sale.report</field>
        <field name="arch" type="xml">
            <form string="Pos Order Site Wise Sale Report" create="0">
                <h1 style="color:black;font-weight:1000;text-align:center;">Pos Order Site Wise Sale Report</h1>
                <sheet>
                    <header>
                        <button name="get_pos_order_sale_report" type="object"
                                string="Submit" class="btn-primary"/>
                        <button name="action_to_reset" type="object"
                                string="Reset" class="btn-secondary"/>
                        <button name="get_excel_sheet" type="object"
                                string="Excel" class="btn-success"/>
                    </header>
                    <group name="pos_sale_report" style="border: 2px solid #990099; padding: 10px;">
                        <group name="pos_sale_report_group">
                            <field name="nhcl_store_id"
                                   placeholder="Select Company" domain="[('nhcl_active', '=', True),('nhcl_store_type', '!=', 'ho')]" widget="many2many_checkboxes"/>
                        </group>
                        <group name="pos_sale_report_date_details">
                            <group>
                                <field name="from_date" required="1" widget="daterange"
                                       options="{'to_date_field': 'to_date'}"/>
                                <field name="to_date" required="1"/>
                            </group>

                        </group>
                    </group>
                    <notebook>
                        <page string="Total Sale Report">
                            <field name="nhcl_pos_sale_report_ids" readonly="1" forsesave="1">
                                <tree create="0" delete="0" editable="bottom">
                                    <field name="nhcl_store_id"/>
                                    <field name="nhcl_amount_total"/>
                                    <field name="nhcl_quantity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!--                                <div class="oe_chatter">-->
                <!--                                    <field name="message_follower_ids"/>-->
                <!--                                    <field name="activity_ids"/>-->
                <!--                                    <field name="message_ids"/>-->
                <!--                                </div>-->
            </form>
        </field>
    </record>

        <menuitem id="reporting_status_pos_sale"
              name="As on Date Sale Report"
              parent="reporting_store_heading"
              action="nhcl_ho_store_cmr_integration.nhcl_pos_sale_report"
              sequence="5"/>



</odoo>

