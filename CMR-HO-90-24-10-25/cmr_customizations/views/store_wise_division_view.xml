<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="store_wise_division_view_view_form" model="ir.ui.view">
        <field name="name">store.wise.data.form</field>
        <field name="model">store.wise.data</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                     <div>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    <group>
                        <group>
                        <field name="store_id" string="Store" options="{'no_create': True, 'no_open': True}"/>
                        <button name="get_store_division_data" string="Confirm" type="object" confirm="Do you want the store data" class="oe_highlight"/>
                    </group>
                    <group>
                        <field name="from_date" force_save="1"/>
                        <field name="to_date" force_save="1"/>
                    </group>
                    </group>
                    <notebook>
                            <page string="Division Lines">
                            <field name="division_line_ids" mode="tree" context="{'default_store_data_id': active_id}">
                                <tree create="0" editable="bottom" string="Division Lines" >
                                    <field name="s_no" width="50px"/>
                                    <field name="division_name" width="150px" force_save="1"/>
<!--                                    <field name="product_count"/>-->
                                    <field name="total_rsp_value" width="150px" sum="RSP Total"/>
                                    <field name="percentage" widget="percent" options="{'precision': 0}" width="150px" sum="Percentage"/>
                                    <field name="per_month_value" width="150px" sum="Total Month Value"/>
                                     <field name="expenses" width="150px" sum="Total Exp"/>
                                    <field name="soh_exp" width="150px" sum="Total SOH EXP" force_save="1"/>
                                    <field name="regular_percentage" width="150px"/>
                                    <field name="regular_excess_month" width="150px" sum="Total Month" force_save="1"/>
                                    <field name="regular_per_day" width="150px" sum="Total Regular" force_save="1"/>
                                    <field name="festival_percentage" width="150px"/>
                                    <field name="festival_excess_month" width="150px" sum="Total Excess month" force_save="1"/>
                                    <field name="festival_per_day" width="150px" sum="Total Per Day" force_save="1"/>

                                </tree>
                            </field>
                        </page>
<!--                        <page string="Lines">-->
<!--                            <field name="line_ids">-->
<!--                                <list editable="bottom">-->
<!--                                    <field name="name"/>-->
<!--                                    <field name="description"/>-->
<!--                                    <field name="quantity"/>-->
<!--                                    <field name="price"/>-->
<!--                                    <field name="subtotal" sum="Total"/>-->
<!--                                </list>-->
<!--                            </field>-->
<!--                        </page>-->
<!--                        <page string="Notes">-->
<!--                            <field name="notes"/>-->
<!--                        </page>-->
                    </notebook>
                </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    
    <!-- List View -->
    <record id="store_wise_division_view_view_tree" model="ir.ui.view">
