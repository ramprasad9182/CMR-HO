<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="vendor_bill_custom_header">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
        </t>
        <!--        header part -->
        <div class="header" style="text-align: center;">
            <div class="row" style="height: 60px; align-items: center;">
                <!-- Left: Company Logo -->
                <div class="col-8" style="text-align: left;">
                    <t t-if="company.logo">
                        <img t-att-src="image_data_uri(company.logo)" alt="Logo"
                             style="width: 100px; max-height: 100px;"/>
                    </t>
                </div>

                <!-- Center: Company Name -->
                <div class="col-4" style="text-align: right; font-size: 18px; font-weight: bold; margin-top: 30px;">
                    <p style="text-align:right;">Purchase Invoice</p>
                </div>
            </div>
            <div class="row" style="height: 60px; align-items: center;margin-top:8px;">
                <div class="col-12" style="text-align: left; font-size: 15px;">
                    <span style="font-weight: bold; font-size: 22px;">
                        <t t-esc="company.name"/>
                    </span>
                    <div>
                        <span t-field="company.street"/>
                        <span t-field="company.street2"/>
                        <br/>
                        <span t-field="company.state_id.name"/>
                        <span t-field="company.city"/>
                        <span t-field="company.zip"/>
                        <br/>
                        Email:
                        <span t-field="company.email"/>
                    </div>
                </div>
            </div>
        </div>
        <!--        footer part-->
        <div class="footer" style="width: 100%; margin-top: 10px; padding-top: 5px; position: relative;">
            <!-- Horizontal Line (Only at the Top) -->
            <div style="border-top: 1px solid black; width: 100%; position: absolute; top: 0;"></div>

            <table style="width: 100%; font-size: 10px; border: none;">
                <!--                <tr style="border: none;">-->
                <!--                    <td style="text-align: left; border: none;">Print Date:-->
                <span>Print Date:
                    <t t-esc="time.strftime('%Y-%m-%d')"/>
                </span>
                <!--                    </td>-->
                <!--                    <td style="text-align: right; border: none;">Page:-->
                <p style="margin-left:600px;margin-top:0;text-align:right;">Page:
                    <span class="page"/>
                </p>
                <!--                    </td>-->
                <!--                </tr>-->
            </table>
        </div>


    </template>
