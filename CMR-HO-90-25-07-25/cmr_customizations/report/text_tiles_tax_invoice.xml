<odoo>
    <template id="text_tiles_invoice_tax_header">
        <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
        </t>

        <!-- Header Section -->
        <div class="header"
             style="text-align: center; margin-top: 10px;font-family: Arial, Verdana, sans-serif;"> <!-- Added margin-top -->
            <div class="row"
                 style="display: flex; justify-content: space-between; align-items: center; margin-top: 10px;padding-top:25px;font-family: Arial, Verdana, sans-serif;">

                <!-- Left Section: Company Info -->
                <div class="col-9"
                     style="font-size: 15px; text-align: left; font-family: Arial, Verdana, sans-serif;margin-top: 10px;padding-left:30px;">
                    <span style="font-weight: bold; font-size: 24px;font-family: Arial, Verdana, sans-serif;">
                        <t t-esc="company.name"/>
                    </span>
                    <div>
                        <span t-field="company.street"/>
                        <span t-field="company.street2"/>
                        <br/>
                        <span t-field="company.state_id"/>
                        <span t-field="company.zip"/>
                        <br/>
                        <span t-field="company.city"/>
                        <br/>
                        <b>Email:</b>
                        <span t-field="company.email"/>
                    </div>
                </div>

                <!-- Right Section: Tax invoice  Title -->
                <div class="col-3" style="text-align: right;">
                    <t t-if="company.logo">
                        <img t-att-src="image_data_uri(company.logo)" alt="Logo"
                             style="width: 100px; max-height: 100px;"/>
                    </t>
                </div>
            </div>
        </div>
        <div class="footer"
             style="display: flex; justify-content: space-between; align-items: center; margin-top: 10px;">
            <hr style="width: 100%; margin: 0;"/>
            <p style="font-size: 10px; margin: 0;">Print Date:
                <t t-esc="time.strftime('%Y-%m-%d')"/>
            </p>
            <p style="font-size: 10px;margin-left:790px;">Page:
                <span class="page"/>
            </p>
        </div>
    </template>
