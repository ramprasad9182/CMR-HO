<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="cmr_fleet_form_view" model="ir.ui.view">
        <field name="name">fleet></field>
        <field name="model">vehicle.transport</field>
        <field name="arch" type="xml">
            <form>
                <h1 style="color:purple;font-weight:1000;text-align:center;">Fleet Status</h1>
                <button type="object" string="Submit" name="get_vehicle_status" class="oe_highlight"/>
                <button type="object" string="Reset" name="unlink_vehicle_lines"/>
                <button name="get_excel_sheet" type="object"
                                        string="Excel" class="btn-success" />
                <sheet>
                    <group>
                        <group>
                            <field name="name" invisible="1"/>
                            <field name="company_id" options='{"no_open": True, "no_create": True,"no_edit": True}' placeholder="Please, Select the Company..."/>
                            <field name="vehicle_id" options='{"no_open": True, "no_create": True,"no_edit": True}' placeholder="Please, Select the Vehicle..."/>
                        </group>
                        <group>
                            <field name="from_date" placeholder="Please, Enter from date..."/>
                            <field name="end_date" placeholder="Please, Enter to date..."/>
                        </group>
                    </group>
                    <notebook>
                        <page name="status" string="Tracking Info">
                            <field name="cmr_transpot_ids">
                                <tree editable="bottom">
                                    <field name="je_no"/>
                                     <field name="account_id" options='{"no_open": True, "no_create": True,"no_edit": True}'/>
                                     <field name="label"/>
                                     <field name="debit" sum="Debit"/>
                                     <field name="credit" sum="Credit"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="fleet_sales_reporting_action" model="ir.actions.act_window">
        <field name="name">Costs Analysis</field>
        <field name="res_model">vehicle.transport</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No data for analysis
            </p>
            <p>
                Manage efficiently your different effective vehicles Costs with Odoo.
            </p>
        </field>
    </record>


    <menuitem id="menu_fleet_reporting_sales_vehicle"
              name="Fleet JE Report"
              parent="fleet.menu_fleet_reporting"
              action="fleet_sales_reporting_action"
              sequence="2"/>


    <record id="cmr_grc_master_tree_view" model="ir.ui.view">
        <field name="name">grc.master.tree></field>
        <field name="model">grc.master</field>
        <field name="arch" type="xml">
            <tree delete="0" duplicate="0" import="0">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="cmr_grc_master_form_view" model="ir.ui.view">
        <field name="name">grc.master.form></field>
        <field name="model">grc.master</field>
        <field name="arch" type="xml">
            <form delete="0" duplicate="0">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cmr_grc_master_action" model="ir.actions.act_window">
        <field name="name">GRC Master</field>
        <field name="res_model">grc.master</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="cmr_grc_master"
              name="GRC Master"
              parent="stock.menu_warehouse_config"
              action="cmr_customizations.cmr_grc_master_action"
              sequence="100"/>
</odoo>