<?xml version="1.0"?>
<odoo>
	<data>
		<record id="bom_wizard_view" model="ir.ui.view">
			<field name="name">Import BoM Lines</field>
			<field name="model">bom.line.wizard</field>
			<field name="arch" type="xml">
				<form>
					<group>
					    <field name="import_option" widget="radio"/>
						<field name="bom_file"/>
					</group>
					<group>
					    <group>
    					    <field name="import_prod_option" widget="radio"/>
    					</group>
    					<group>
    					    <field name="product_details_option" widget="radio"/>
    					</group>
					</group>
					<footer>
						<button string="Import" name="import_bom_lines" class="oe_highlight" type="object"/>
						or
                        <button name="cancel" string="Cancel" class="oe_link" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="import_bom_line_action" model="ir.actions.act_window">
			<field name="name">Import BoM Lines</field>
			<field name="res_model">bom.line.wizard</field>
			<field name="target">new</field>
			<field name="view_id" ref="bom_wizard_view"/>
			<field name="view_mode">form</field>
		</record>

		<record id="bom_inherit_view" model="ir.ui.view">
			<field name="name">MRP BoM</field>
			<field name="model">mrp.bom</field>
			 <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//div[@name='button_box']" position="inside">
						<button name="%(import_bom_line_action)d"
						string="Import Products"
                        type="action" 
                        class="btn-primary" invisible="allow_import_order == False"/>
					<field name="allow_import_order" invisible="1"/>
				</xpath>
			</field>
		</record>

	</data>
</odoo>
