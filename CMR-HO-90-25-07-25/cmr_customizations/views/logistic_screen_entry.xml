<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!--    #### Logistic Screen Tree View #####-->

    <record model="ir.ui.view" id="logistic_screen_data_tree">
        <field name="name">Logistic Screen Data</field>
        <field name="model">logistic.screen.data</field>
        <field name="arch" type="xml">
            <tree create="0" multi_edit="1">
                <field name="name"/>
                <field name="vendor"/>
                <field name="po_number"/>
                <field name="state"
                       decoration-success="state == 'done'"
                       decoration-info="state == 'draft'"
                       widget="badge"
                       optional="show"/>
            </tree>
        </field>
    </record>

    <!--    #### Logistic Screen Search View #####-->
    <record id="logistic_screen_data_data_search_view" model="ir.ui.view">
        <field name="model">logistic.screen.data</field>
        <field name="name">Logistic Entry</field>
        <field name="arch" type="xml">
            <search string="Logistic Entry">
                <field name="name"/>
                <field name="vendor"/>
                <field name="po_number"/>
                <field name="lr_number"/>
                <field name="state"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" context="{'default_state': 'draft'}" />
            </search>
        </field>
    </record>

    <!--    #### Logistic Screen Form View #####-->

    <record model="ir.ui.view" id="logistic_screen_data_form">
        <field name="name">Logistic Screen Data</field>
        <field name="model">logistic.screen.data</field>
        <field name="arch" type="xml">
            <form create="0">
                <header>
                    <button name="action_confirm" id="action_confirm" data-hotkey="q"
                            string="Confirm" class="btn-primary" type="object"
                            invisible="state == 'done'"/>

                    <button name="reset_to_draft" id="reset_to_draft" data-hotkey="q"
                            string="Reset to Draft" class="btn-primary" type="object"
                            invisible="state != 'done'"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>

                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1" force_save="1"/>
                            <field name="vendor" readonly="1" force_save="1"/>
                            <field name="po_number" readonly="1" force_save="1"/>
                            <field name="logistic_date" readonly="state == 'done'" placeholder="Select Logistic Date"/>
                            <field name="lr_number"  placeholder="Enter alphanumeric LR"
                                   readonly="state == 'done'"/>
                            <field name="lr_date"  placeholder="Select LR Date"
                                   readonly="state == 'done'"/>
                            <field name="transporter" placeholder="Select Transporter"
                                   options="{'no_create': True, 'no_open': True, 'no_edit':True}"
                                   readonly="state == 'done'" domain="[('group_contact.name','=','Transporter')]"/>
                            <field name="transporter_gst"/>
                            <field name="no_of_bales" placeholder="Enter Number Of Bales.." string="Total Bales."
                                   readonly="state == 'done'" />
                            <field name="product_id"  placeholder="Select Bale Product.."
                                   options="{'no_create': True, 'no_open': True, 'no_edit':True}"
                                   domain="[('detailed_type', '=', 'consu')]" readonly="1" force_save="1"/>
                            <field name="due_date" placeholder="Select Due Date"
                                   readonly="state == 'done'"/>
                            <field name="way_bill_no" placeholder="Enter E-Way Bill No" string="E-way Bill No."
                                   readonly="state == 'done'"/>
                            <field name="gst_no"  force_save="1" readonly="state == 'done'"/>
                            <field name="charges" readonly="state == 'done'"/>
                            <field name="no_of_quantity" readonly="1" force_save="1" string="Total Quantity."/>
                            <field name="remaining_quantity" readonly="1" force_save="1"/>
                        </group>
                        <group>
                            <field name="se_branch" readonly="state == 'done'"  placeholder="Select Your Branch.."
                                   options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                            <field name="placements" readonly="state == 'done'" options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                            <field name="finencial_year" readonly="state == 'done'" invisible="1"/>
                            <field name="logistic_vendor" options="{'no_create': True, 'no_open': True, 'no_edit':True}" readonly="state == 'done'"/>
                            <field name="fin_year" readonly="state == 'done'" placeholder="Please Select Financial Year.."/>
                            <field name="delivery_date"  placeholder="Select Delivery Date"
                                   readonly="state == 'done'"/>
                            <field name="no_of_invoices" placeholder="Enter Number Of Invoices.."
                                   readonly="state == 'done'"/>
                            <field name="invoice_quantity" placeholder="Enter Number Of Quantities.."
                                   readonly="state == 'done'"/>
                            <field name="logistic_values" placeholder="Enter Logistic Amount.."
                                   readonly="state == 'done'"/>
                            <field name="logistic_type"  placeholder="Select Logistic Type.."
                                   readonly="state == 'done'"/>
                            <field name="city"  placeholder="Enter City"
                                   readonly="state == 'done'"/>
                            <field name="consignor" readonly="state == 'done'"
                                   placeholder="Select Consignor" options="{'no_create': True, 'no_open': True, 'no_edit':True}" domain="[('group_contact.name','=','Vendor')]"/>
                            <field name="address"  placeholder="Enter Address.."
                                   readonly="state == 'done'"/>
                            <field name="remarks" readonly="state == 'done'" placeholder="Enter The Remarks..."/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!--    #### Logistic Screen Action View #####-->

    <record id="logistic_screen_data_action" model="ir.actions.act_window">
        <field name="name">Logistic Entry Check</field>
        <field name="res_model">logistic.screen.data</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="logistic_screen_data_data_search_view"/>
        <field name="context">{"search_default_state":'draft'}</field>
        <field name="help" type="html">
            <p>Logistic Screen Data</p>
        </field>
    </record>

</odoo>