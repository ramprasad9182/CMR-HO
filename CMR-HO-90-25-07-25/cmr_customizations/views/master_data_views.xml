<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Tree View -->
    <record id="view_master_data_tree" model="ir.ui.view">
        <field name="name">master.data.tree</field>
        <field name="model">master.data</field>
        <field name="arch" type="xml">
            <tree string="Master Data" create="false" delete="false">
                <field name="name"/>
                <field name="store_id"/>
                <field name="master_type"/>
                <field name="sending_count"/>
                <field name="created_count"/>
                <field name="pending_count"/>
                <field name="date_time"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_master_data_form" model="ir.ui.view">
        <field name="name">master.data.form</field>
        <field name="model">master.data</field>
        <field name="arch" type="xml">
            <form string="Master Data">
                <group>
                    <field name="name"/>
                    <field name="store_id"/>
                    <field name="sending_count"/>
                    <field name="created_count"/>
                    <field name="pending_count"/>
                    <field name="date_time"/>
                    <field name="desc"/>
                    <field name="master_type"/>
                </group>
            </form>
        </field>
    </record>


    <record id="action_master_data" model="ir.actions.act_window">
        <field name="name">Master Data</field>
        <field name="res_model">master.data</field>
        <field name="view_mode">tree</field>
    </record>


    <menuitem id="menu_master_data_root" name="Master Data" action="action_master_data" web_icon="cmr_customizations,static/description/report.png"/>


</odoo>



