<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="placement_master_tree" model="ir.ui.view">
        <field name="name">placement.master.tree</field>
        <field name="model">placement.master.data</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="placement_master_form" model="ir.ui.view">
        <field name="name">placement.master.form</field>
        <field name="model">placement.master.data</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_to_placement_master" model="ir.actions.act_window">
        <field name="name">Placement Master</field>
        <field name="res_model">placement.master.data</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Placement Master Data</p>
        </field>
    </record>

</odoo>
