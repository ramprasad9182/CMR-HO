<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="nhcl_pos_hour_report" model="ir.actions.act_window">
        <field name="name">Pos Hour Report</field>
        <field name="res_model">nhcl.pos.hour.report</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="nhcl_pos_hour_report_form" model="ir.ui.view">
        <field name="name">Pos Hour Report Form</field>
        <field name="model">nhcl.pos.hour.report</field>
        <field name="arch" type="xml">
            <form string="Pos Order Hourly Based Quantity vs Amount" create="0">
                <h1 style="color:black;font-weight:1000;text-align:center;">Pos Order Hourly Based Quantity vs Amount</h1>
                <sheet>
                    <header>
                        <button name="get_pos_order_hour_report" type="object"
                                string="Submit" class="btn-primary"/>
                        <button name="action_to_reset" type="object"
                                string="Reset" class="btn-secondary"/>
                        <button name="get_excel_sheet" type="object"
                                string="Excel" class="btn-success"/>
                    </header>
                    <group name="pos_hour_report" style="border: 2px solid #990099; padding: 10px;">
                        <group name="pos_hour_report_group">
                            <field name="nhcl_store_id"
                                   placeholder="Select Company" domain="[('nhcl_active', '=', True),('nhcl_store_type', '!=', 'ho')]" widget="many2many_checkboxes"/>
                        </group>
                        <group name="pos_hour_report_date_details">
                            <group>
                                <field name="from_date" required="1" widget="daterange"
                                       options="{'to_date_field': 'to_date'}"/>
                                <field name="to_date" required="1"/>
                            </group>

                        </group>
                    </group>
                    <notebook>
                        <page string="POS Order Report">
                            <field name="nhcl_pos_hour_report_ids" readonly="1" forsesave="1">
                                <tree create="0" delete="0" editable="bottom">
                                    <field name="nhcl_store_id"/>
                                    <field name="nhcl_order_ref"/>
                                    <field name="nhcl_date_order"/>
                                    <field name="nhcl_order_quantity"/>
                                    <field name="nhcl_amount_total"/>
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
                <!--                                <div class="oe_chatter">-->
                <!--                                    <field name="message_follower_ids"/>-->
                <!--                                    <field name="activity_ids"/>-->
                <!--                                    <field name="message_ids"/>-->
                <!--                                </div>-->
            </form>
        </field>
    </record>

    <record id="empty_page" model="ir.actions.client">
        <field name="name">Empty</field>
        <field name="tag">empty_report</field>
    </record>


    <menuitem id="hour_report_menu_root"
              web_icon="nhcl_ho_store_cmr_integration,static/description/report_icon.png"
              name="MIS Reports"
