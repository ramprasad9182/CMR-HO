<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_users_form_replication" model="ir.ui.view">
            <field name="name">res.users.form.replication</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <div class="alert alert-success" role="alert" invisible="update_replication == False">
                    <field name="warning_message" style="white-space: pre-wrap;"/>
                </div>
                <div class="alert alert-danger" role="alert" invisible="update_replication == True">
                    <field name="warning_message" style="white-space: pre-wrap;"/>
                </div>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Integration">
                        <button name="get_stores_data" type="object" string="Get Stores" class="oe_highlight"/>
                        <group>
                            <field name="nhcl_id"/>
                            <field name="update_replication" readonly="1" forcesave="1"/>
                            <field name="update_status" readonly="1" forcesave="1"/>
                            <button name="send_replication_data" type="object" string="Submit" class="oe_highlight"
                                    invisible="update_replication == True"/>
                            <button name="update_user_replication_data" type="object" string="Update"
                                class="oe_highlight"/>
                        </group>
                        <field name="user_replication_id" readonly="1">
                            <tree editable="bottom">
                                <field name="store_id" width="40%"/>
                                <field name="status" width="30%"/>
                                <field name="date_replication" width="30%"/>
                                <field name="update_status" width="30%"/>
                                <field name="nhcl_terminal_ip"/>
                                <field name="nhcl_port_no"/>
                                <field name="nhcl_api_key"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    <record id="res_users_inherit_tree_view" model="ir.ui.view">
        <field name="name">res.users.tree.view.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="update_replication"/>
            </xpath>
        </field>
    </record>
</odoo>
