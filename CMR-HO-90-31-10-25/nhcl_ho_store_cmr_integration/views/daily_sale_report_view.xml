<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="nhcl_sale_daily_report" model="ir.actions.act_window">
        <field name="name">Daily Sale Report</field>
        <field name="res_model">nhcl.daily.sale.report</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="nhcl_sale_daily_report_form" model="ir.ui.view">
        <field name="name">Pos Hour Report Form</field>
        <field name="model">nhcl.daily.sale.report</field>
        <field name="arch" type="xml">
            <form string="Daily Sale DSD Report" create="0">
                <h1 style="color:black;font-weight:1000;text-align:center;">Daily Sale DSD Report</h1>
                <sheet>
                    <header>
                        <button name="daily_sale_dsd_report" type="object"
                                string="Submit" class="btn-primary"/>
                        <button name="action_to_reset" type="object"
                                string="Reset" class="btn-secondary"/>
                        <button name="get_excel_sheet" type="object"
                                string="Excel" class="btn-success"/>
                    </header>
                    <group name="sale_daily_report" style="border: 2px solid #990099; padding: 10px;">
                        <group name="sale_daily_report_group">
                            <field name="nhcl_store_id"
                                   placeholder="Select Company" domain="[('nhcl_active', '=', True),('nhcl_store_type', '!=', 'ho')]" widget="many2many_checkboxes"/>
                        </group>
                        <group name="sale_daily_report_date_details">
                            <group>
                                <field name="from_date" required="1" widget="daterange"
                                       options="{'to_date_field': 'to_date'}"/>
                                <field name="to_date" required="1"/>
                            </group>

                        </group>
                    </group>
                    <notebook>
                        <page string="sales Lines">
                            <field name="nhcl_daily_sale_report_ids" readonly="1" forsesave="1">
                                <tree create="0" delete="0" editable="bottom">
                                    <field name="nhcl_store_id"/>
                                    <field name="family_name"/>
                                    <field name="category_name"/>
                                    <field name="class_name"/>
                                    <field name="brick_name"/>
                                    <field name="bill_qty" sum="total_qty"/>
                                    <field name="net_amount" sum="net_total"/>
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
                <!--                                <div class="oe_chatter">-->
                <!--                                    <field name="message_follower_ids"/>-->
                <!--                                    <field name="activity_ids"/>-->
                <!--                                    <field name="message_ids"/>-->
                <!--                                </div>-->
            </form>
        </field>
    </record>

    <record id="empty_page" model="ir.actions.client">
        <field name="name">Empty</field>
        <field name="tag">empty_report</field>
    </record>



    <menuitem id="reporting_status_sale_daily"
              name="Daily Sale DSD Report"
              parent="reporting_store_heading"
              action="nhcl_ho_store_cmr_integration.nhcl_sale_daily_report"
              sequence="3"/>


