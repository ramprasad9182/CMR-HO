<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="designation_wise_incentive_report" model="ir.actions.act_window">
        <field name="name">Designation Incentive Report</field>
        <field name="res_model">designation.wise.incentive.report</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record id="sale_person_incentive_summary_report_form" model="ir.ui.view">
        <field name="name">Designation Incentive Report</field>
        <field name="model">designation.wise.incentive.report</field>
        <field name="arch" type="xml">
            <form string="Designation Incentive Report" create="0">
                <h1 style="color:black;font-weight:1000;text-align:center;">Designation Incentive Report</h1>
                <sheet>
                    <header>
                        <button name="designation_wise_incentive_report" type="object"
                                string="Submit" class="btn-primary"/>
                        <button name="action_to_reset" type="object"
                                string="Reset" class="btn-secondary"/>
                        <button name="get_excel_sheet" type="object"
                                string="Excel" class="btn-success"/>
                    </header>
                    <group name="sale_person_incentive" style="border: 2px solid #990099; padding: 10px;">
                        <group name="sale_person_incentive_group">
                             <field name="nhcl_store_id"
                                   placeholder="Select Company" domain="[('nhcl_active', '=', True),('nhcl_store_type', '!=', 'ho')]" options="{'no_create': True}"/>
                            <field name="ref_company_id"  placeholder="Select Company"   invisible="1"/>
                        </group>
                        <group name="incentive_date_details">
                            <group>
                                <field name="from_date" required="1" widget="daterange"
                                       options="{'to_date_field': 'to_date'}"/>
                                <field name="to_date" required="1"/>
                            </group>

                        </group>
                    </group>
                    <notebook>
                        <page string="Designation  Wise Summary Report">
                            <field name="designation_wise_ids" readonly="1">
                                <tree create="0" delete="0" editable="bottom">
                                    <field name="sale_person_id"/>
                                    <field name="employee_designation"/>
                                    <field name="incentive_rule_name"/>
                                    <field name="base_value" sum="Sum of Total"/>
                                    <field name="amount" sum="Sum of Total"/>
                                    <field name="ref_company_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>



</odoo>

