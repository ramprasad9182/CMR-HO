<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Action -->
    <record id="nhcl_store_pos_audit_summary_action" model="ir.actions.act_window">
        <field name="name">Store POS Audit Summary</field>
        <field name="res_model">nhcl.store.pos.audit.summary</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <!-- Form View -->
    <record id="nhcl_store_pos_audit_summary_form" model="ir.ui.view">
        <field name="name">nhcl.store.pos.audit.summary.form</field>
        <field name="model">nhcl.store.pos.audit.summary</field>
        <field name="arch" type="xml">
            <form string="Store and POS Audit Summary" create="0">
                <h1 style="color:black;font-weight:1000;text-align:center;">Store and POS Audit Summary</h1>
                <sheet>
                    <header>
                        <button name="get_store_pos_audit_summary" type="object"
                                string="Submit" class="btn-primary"/>
                         <button name="action_to_reset" type="object"
                                string="Reset" class="btn-secondary"/>
                        <button name="get_excel_sheet" type="object"
                                string="Excel" class="btn-success"/>
                        <button name="get_negative_stock_excel" string="Download Negative Stock Excel" type="object" class="btn-primary"/>
                    </header>

                    <group name="filters" style="border: 2px solid #0099cc; padding: 10px;">
                        <group>
                            <field name="nhcl_store_id"
                                   placeholder="Select Company"
                                   widget="many2many_checkboxes"
                                   domain="[('nhcl_active','=',True),('nhcl_store_type','!=','ho')]" />
                            <field name="company_domain" invisible="1"/>
                            <field name="audit_type_id" domain="company_domain" options="{'no_create': True, 'no_open': True, 'no_edit':True}"/>
                        </group>
                        <group>
                            <field name="from_date" widget="daterange" options="{'to_date_field': 'to_date'}"/>
                            <field name="to_date"/>
                            <button name="action_import_negative_stock" string="Import -Ve Stock" type="object" class="btn-warning"/>
                        </group>

                    </group>

                    <notebook>
                        <page string="Audit Summary Lines">
                            <field name="nhcl_store_pos_audit_summary_ids" readonly="1" forsesave="1">
                                <tree create="0" delete="0" editable="bottom">
                                    <field name="division_name" string="Family"/>
                                    <field name="store_name" string="Store Name"/>
                                    <field name="book_qty" string="Book Qty" sum="book_qty"/>
                                    <field name="phy_qty" string="Physical Qty" sum="phy_total"/>
                                    <field name="difference_qty" string="Difference Qty" sum="sum_total"/>
                                    <field name="book_rsp_price" string="Book RSP" sum="rsp_total"/>
                                    <field name="phy_rsp_price" string="Physical RSP" sum="rsp_total"/>
                                    <field name="difference_rsp_price" string="Diff RSP" sum="rsp_total"/>
                                    <field name="difference_book_cp_price" sum="cp_total"/>
                                    <field name="difference_phy_cp_price" sum="cp_total"/>
                                    <field name="difference_cp_price" sum="cp_total"/>
                                    <field name="sale_total" sum="sales_total"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Negative Stock">
                            <field name="negative_stock_line_ids">
                                <tree string="Negative Stock Records">
                                    <field name="division_name"/>
                                    <field name="store_name"/>
                                    <field name="book_qty" sum="book_total"/>
                                    <field name="phy_qty" sum="qty_total"/>
                                    <field name="difference_qty" sum="diff_total"/>
                                    <field name="book_rsp_price" sum="rs_total"/>
                                    <field name="phy_rsp_price" sum="rs_total"/>
                                    <field name="difference_rsp_price" sum="diff_rs_total"/>
                                    <field name="book_cp_price" sum="cp_total"/>
                                    <field name="phy_cp_price" sum="cp_total"/>
                                    <field name="difference_cp_price" sum="diff_cp_total"/>
                                    <field name="import_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

