        <field name="name">Store POS Audit Summary</field>
        <field name="res_model">nhcl.store.pos.audit.summary</field>
         <field name="view_mode">form</field>
         <field name="domain">[]</field>
         <field name="context">{}</field>
    </record>

    <menuitem id="nhcl_store_pos_audit_summary_menu"
              name="Store POS Audit Summary"
              parent="nhcl_ho_store_cmr_integration.reporting_store_heading"
